@model MainBit.Alias.ViewModels.EnumUrlSegmentIndexViewModel
@{
    Layout.Title = T("Enumeration URL segments");
}
@Html.AntiForgeryTokenOrchard()
<div class="manage">
    @Html.ActionLink(T("Add").Text, "Add", new { Area = "MainBit.Alias" }, new { @class = "button primaryAction" })
</div>
<table class="items">
    <thead>
        <tr>
            <th scope="col">
                @T("Position")
            </th>
            <th scope="col">
                @T("Name")
            </th>
            <th>
                @T("Display name")
            </th>
            <th scope="col">
                @T("Actions")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var template in Model.Templates)
        {
            <tr>
                <td>
                    @template.Position
                </td>
                <td>
                    @template.Name
                </td>
                <td>
                    @template.DisplayName
                </td>
                <td>
                    @Html.ActionLink(T("Edit values").Text, "Index", "EnumUrlSegmentValueAdmin", new { segmentId = @template.Id, area = "MainBit.Alias" }, null)
                    @T(" | ")
                    @Html.ActionLink(T("Edit").Text, "Edit", "EnumUrlSegmentAdmin", new { id = @template.Id, area = "MainBit.Alias" }, null)
                    @T(" | ")
                    @Html.ActionLink(T("Delete").Text, "Delete", "EnumUrlSegmentAdmin", new { id = @template.Id, area = "MainBit.Alias" }, new { data_unsafe_url = T("Are you sure you want to delete this base url template?") })
                </td>
            </tr>
        }
    </tbody>
</table>